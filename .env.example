# 服务器配置
PORT=3001

# 数据库配置（虽然这里是模拟数据库，但保留配置结构便于未来扩展）
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=homework_collection

# 文件上传配置
UPLOAD_DIR=./uploads
DB_PATH=./db/db
MAX_FILE_SIZE=20971520 # 20MB
FILE_NAMING_RULE={学号}_{姓名}

# 作业收集周期配置（day/week/month）
COLLECTION_CYCLE=week

# JWT配置（用于未来扩展）
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# 其他配置
NODE_ENV=production